<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                LIST OF PRODUCTS
            </h2>
            <div class="btn-box">
                <a href="/admin/add-products/">
                    ADD PRODUCTS
                </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    {{!-- <th scope="col">1</th> --}}
                    <th scope="col">Sl NO</th>
                    <th scope="col">ITEM</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each response}}
                
                <tr id="{{this._id}}product">
                    <th scope="row">{{inc @index}}</th>
                    <td>
                        <div class="img-box">
                            <img src="/user-images/{{this.userId}}.jpg" class="mt-3" width="100px" alt="">
                        </div>
                    </td>
                    <td>
                        <div class="detail-box">
                            <h6>{{this.orderDetails.name}}
                                {{this.orderDetails.address}}
                                <p>{{this.orderDetails.mobileNumber}}</p>
                                <p></p>
                            </h6>
                            <h6>
                                
                                <span>
                                    ${{this.price}}
                                </span>
                            </h6>

                        </div>
                    </td>
                    <td>
                        {{this.paymentMethod}}
                    </td>
                     <td>
                        {{this._id}}
                    </td>
                    <td>
                        {{this.totalAmount}}
                        {{!-- <div class="btn-box">
                            <a href="/admin/edit-products?id={{this._id}}">
                                EDIT
                            </a>
                        </div> --}}
                    </td>
                </tr>
                
                {{/each}}
            </tbody>
        </table>
        <div class="row">

            <div class="col-sm-6 col-xl-3">
                <div class="box">





                </div>
            </div>
        </div>

    </div>
</section>